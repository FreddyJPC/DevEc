// src/components/ContactForm.astro
---

<section class="contact-section">
    <!-- Fondo decorativo (Glow) -->
    <div class="glow-bg"></div>

    <div class="contact-container">
        <div class="form-header reveal-text">
            <span class="badge">Hablemos</span>
            <h2>
                Cuéntanos tu <span class="text-accent font-secondary-italic"
                    >idea</span>
            </h2>
            <p>
                Estamos listos para escuchar tu visión y convertirla en una
                solución digital de alto impacto.
            </p>
        </div>

        <form class="contact-form reveal-card" id="projectForm">
            <!-- Nombre -->
            <div class="form-group">
                <label for="nombre">Tu Nombre</label>
                <input
                    type="text"
                    id="nombre"
                    name="nombre"
                    placeholder="Ej. Juan Pérez"
                    required
                />
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="email">Correo Electrónico</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="juan@ejemplo.com"
                    required
                />
            </div>

            <!-- Teléfono -->
            <div class="form-group">
                <label for="telefono">Teléfono / WhatsApp</label>
                <input
                    type="tel"
                    id="telefono"
                    name="telefono"
                    placeholder="+593 99 123 4567"
                    required
                />
            </div>

            <!-- La Idea -->
            <div class="form-group">
                <label for="idea">Cuéntanos sobre tu proyecto</label>
                <textarea
                    id="idea"
                    name="idea"
                    rows="5"
                    placeholder="Tengo una idea para una app/web que..."
                    required></textarea>
            </div>

            <!-- Mensajes de estado -->
            <div id="formStatus" class="form-status"></div>

            <button type="submit" class="submit-btn">
                <span>Enviar Propuesta</span>
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><line x1="22" y1="2" x2="11" y2="13"></line><polygon
                        points="22 2 15 22 11 13 2 9 22 2"></polygon></svg
                >
            </button>
        </form>
    </div>
</section>

<style>
    :root {
        --color-accent: #00e599;
        --font-primary: "Satoshi", sans-serif;
        --font-secondary: "Instrument Serif", serif;
    }

    .contact-section {
        position: relative;
        padding: 8rem 1rem 4rem;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .glow-bg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 600px;
        height: 600px;
        background: radial-gradient(
            circle,
            rgba(0, 229, 153, 0.1) 0%,
            rgba(0, 0, 0, 0) 70%
        );
        z-index: -1;
        pointer-events: none;
    }

    .contact-container {
        width: 100%;
        max-width: 500px;
        position: relative;
        z-index: 1;
    }

    .form-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .badge {
        color: var(--color-accent);
        font-family: var(--font-primary);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        display: block;
        margin-bottom: 1rem;
    }

    .form-header h2 {
        font-family: var(--font-primary);
        font-size: 3rem;
        color: #fff;
        margin-bottom: 1rem;
        line-height: 1.1;
    }

    .text-accent {
        color: var(--color-accent);
    }
    .font-secondary-italic {
        font-family: var(--font-secondary);
        font-style: italic;
    }

    .form-header p {
        color: #a1a1aa;
        font-family: var(--font-primary);
        line-height: 1.6;
    }

    .contact-form {
        background: rgba(13, 13, 13, 0.6);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 2.5rem;
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        width: 100%;
    }

    label {
        font-family: var(--font-primary);
        font-size: 0.9rem;
        color: #ccc;
        font-weight: 500;
    }

    input,
    textarea {
        background-color: #050505;
        border: 1px solid #333;
        border-radius: 12px;
        padding: 1rem;
        color: #fff;
        font-family: var(--font-primary);
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 100%;
    }

    input:focus,
    textarea:focus {
        outline: none;
        border-color: var(--color-accent);
        box-shadow: 0 0 0 4px rgba(0, 229, 153, 0.1);
    }

    textarea {
        resize: vertical;
    }

    .submit-btn {
        background-color: var(--color-accent);
        color: #000;
        border: none;
        padding: 1rem;
        border-radius: 50px;
        font-family: var(--font-primary);
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 0.5rem;
        width: 100%;
    }

    .submit-btn:hover {
        background-color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 229, 153, 0.2);
    }

    .form-status {
        text-align: center;
        min-height: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }
    .success {
        color: var(--color-accent);
    }
    .error {
        color: #ff4444;
    }

    @media (max-width: 768px) {
        .contact-form {
            padding: 1.5rem;
        }
        .form-header h2 {
            font-size: 2.5rem;
        }
    }
</style>

<script>
    import { createClient } from "@supabase/supabase-js";

    const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
    const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
    const supabase = createClient(supabaseUrl, supabaseKey);

    const form = document.getElementById(
        "projectForm",
    ) as HTMLFormElement | null;
    const statusDiv = document.getElementById("formStatus");
    const btn = document.querySelector(
        ".submit-btn",
    ) as HTMLButtonElement | null;

    if (form && statusDiv && btn) {
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const originalBtnText = btn.innerHTML;
            btn.innerHTML = "Enviando...";
            btn.disabled = true;
            statusDiv.textContent = "";
            statusDiv.className = "form-status";

            const formData = new FormData(form);
            const nombre = formData.get("nombre");
            const email = formData.get("email");
            const telefono = formData.get("telefono");
            const idea = formData.get("idea");

            try {
                const { error } = await supabase.from("leads").insert([
                    {
                        nombre: nombre,
                        email: email,
                        telefono: telefono,
                        idea: idea,
                    },
                ]);

                if (error) throw error;

                statusDiv.textContent =
                    "¡Gracias! Hemos recibido tu idea. Te contactaremos pronto.";
                statusDiv.classList.add("success");
                form.reset();
            } catch (error) {
                console.error("Error:", error);
                statusDiv.textContent =
                    "Hubo un error al enviar. Por favor intenta de nuevo o escríbenos por WhatsApp.";
                statusDiv.classList.add("error");
            } finally {
                btn.innerHTML = originalBtnText;
                btn.disabled = false;
            }
        });
    }
</script>